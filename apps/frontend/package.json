{
  "name": "@api-navigator/frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/validate-env.js && next dev -p 3010",
    "dev:check": "node scripts/validate-env.js && node scripts/check-port.mjs 3010 && next dev -p 3010",
    "dev:force": "node scripts/validate-env.js && node scripts/kill-port.mjs 3010 --yes && next dev -p 3010",
    "build": "node scripts/validate-env.js && next build",
    "build:worker": "node scripts/validate-env.js && opennextjs-cloudflare build",
    "deploy:worker": "opennextjs-cloudflare deploy",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "validate-env": "node scripts/validate-env.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@api-navigator/shared": "workspace:*",
    "@scalar/api-reference-react": "0.8.11",
    "clsx": "2.1.1",
    "geist": "1.5.1",
    "isomorphic-dompurify": "^2.14.0",
    "marked": "^15.0.1",
    "next": "16.0.10",
    "next-intl": "4.6.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "1.14.6",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "happy-dom": "^20.0.11",
    "playwright": "^1.56.1",
    "tailwindcss": "^4",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.53.0",
    "jsdom": "27.3.0"
  }
}
